<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .newpat{
        background-color: #9593FF;
    }
    </style>
</head>
<body>

      
    <!-- Sidebar -->
    <div class="hidden md:block md:w-1/4 lg:w-1/6 sidebar text-white p-4">
        <div class="logo"></div>
        <ul class="menu">
            <li class=" newpat hover:bg-purple-500">
                <a href="/receptionist/addpatient" > <span >  + &nbsp;New Patient</span></a>
            </li><br>

            <li>
                <a href="/receptionist/dashboard"><i class="fas fa-user-injured text-white"></i></i><span>Patient's History</span></a>
            </li>
        
            <li class="logout">
                <a href=""> <i class="fas fa-cog text-white"></i><span>Settings</span></a><br>
                <a href="/logout" > <i class="fas fa-sign-out-alt text-white"></i><span>Logout</span></a>
            </li>

        </ul>
    </div> 

   <!--Body -->

   <div class="main--content">
     <!-- Header -->
     <div class="header--wrapper">
        
        <div class="header--title">
            <span class="bg-black text-white px-2 py-1">PRO</span> CLINIC
            <div class="mt-2"></div> 
            <h2 class="mt-4">Register New Patient</h2>
        </div>

        <div class="user--info flex items-center space-x-4">
            <div class="relative">
                <input type="text" placeholder="Search" class="border border-gray-300 rounded-md p-2 pl-10" id="">
                <i class="fas fa-search text-black absolute left-3 top-1/2 transform -translate-y-1/2"></i> 
            </div>

            <div class="profile-icon bg-black rounded-full p-3 flex items-center justify-center w-12 h-12">
                <i class="fas fa-user text-white"></i> 
            </div>
        </div>
     </div>

     <!--Registration page-->
   <div class="registration-form bg-white shadow-lg rounded-lg p-8 mt-8">
    <h3 class="text-2xl font-semibold  mb-6 header--title">Patient Registration</h3>

    <form action="/receptionist/addpatient" method="POST" id="patientForm" class="space-y-4">
        <!-- Full Name and Age (One Line) -->
        <div class="flex space-x-4">
            <div class="w-2/3">
                <label for="name" class="block text-gray-600 font-medium">Full Name</label>
                <input type="text" id="name" name="name" required placeholder="Enter full name"
                    class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-400 border-purple-400">
            </div>
            <div class="w-1/3">
                <label for="age" class="block text-gray-600 font-medium">Age(Years)</label>
                <input type="number" id="age" min="1" name="age" required placeholder="Enter age"
                    class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-400 border-purple-400">
            </div>
        </div>

        <!-- Date of Birth -->
        <div>
            <label for="dob" class="block text-gray-600 font-medium">Date of Birth</label>
            <input type="date" id="dob" name="dob" required
                class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-400 border-purple-400">
        </div>

        <!-- Marital Status -->
        <div>
            <label for="marital-status" class="block text-gray-600 font-medium">Marital Status</label>
            <select id="marital-status" name="marital_status" required
                class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-400 border-purple-400">
                <option value="" disabled selected>Select marital status</option>
                <option value="single">Single</option>
                <option value="married">Married</option>
                <option value="divorced">Divorced</option>
                <option value="widowed">Widowed</option>
            </select>
        </div>

        <!-- Gender -->
        <div>
            <label class="block text-gray-600 font-medium">Gender</label>
            <div class="mt-2 space-x-4">
                <label>
                    <input type="radio" name="gender" value="male" required
                        class="form-radio text-indigo-600focus:ring-purple-400">
                    <span class="ml-2">Male</span>
                </label>
                <label>
                    <input type="radio" name="gender" value="female" required
                        class="form-radio text-purple-600 focus:ring-purple-400">
                    <span class="ml-2">Female</span>
                </label>
                <label>
                    <input type="radio" name="gender" value="other" required
                        class="form-radio text-indigo-600 focus:ring-purple-400">
                    <span class="ml-2">Other</span>
                </label>
            </div>
        </div>

        <!-- Phone Number -->
        <div>
            <label for="phone" class="block text-gray-600 font-medium">Phone Number</label>
            <input type="tel" id="phone" name="phone" required placeholder="Enter phone number"
                class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-400 border-purple-400">
        </div>

        <!-- Email and Address (One Line) -->
        <div class="flex space-x-4">
            <div class="w-1/2">
                <label for="email" class="block text-gray-600 font-medium">Email</label>
                <input type="email" id="email" name="email" required placeholder="Enter email address"
                    class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-400 border-purple-400">
            </div>
            <div class="w-1/2">
                <label for="address" class="block text-gray-600 font-medium">Address</label>
                <input type="text" id="address" name="address" required placeholder="Enter address"
                    class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-400 border-purple-400">
            </div>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
            <button type="submit"
                class="bg-indigo-600 text-white py-2 px-6 rounded-md font-semibold hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Register Patient
            </button>
        </div>
    </form>
</div>

<script>
        // Listen for form submission
        document.getElementById('patientForm').addEventListener('submit', function(event) {
            event.preventDefault(); 

            // Show a simple alert pop-up
            alert('Patient successfully added!');
             this.submit();
        });
</script>

</body>
</html>