<div id="patientId" data-id=""></div>
<script>
  document.getElementById('profileForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    // Get the patient ID from the URL
    const currentURL = window.location.href;
    const urlParts = currentURL.split('/');
    const patientId = urlParts[urlParts.length - 1]; // Get the last part of the URL (the ID)

    console.log("The patient ID is", patientId);

    // Create a FormData object and append the patient ID
    const formData = new FormData(this);
    formData.append('patientId', patientId); // Add patient ID to the form data

    // Create an object from FormData
    const data = Object.fromEntries(formData.entries());

    try {
      // Send the request with the form data and patient ID
      const response = await fetch(`/doctor/patients/`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        // If the update is successful, redirect to the medical records page showing all patients
        window.location.href = `/doctor/medicalrecords`;
      } else {
        const errorText = await response.text();
        console.error("Error response:", errorText);
        alert("Error updating patient record");
      }
    } catch (error) {
      console.error("Error:", error);
      alert("An error occurred while updating the record");
    }
  });
</script>
